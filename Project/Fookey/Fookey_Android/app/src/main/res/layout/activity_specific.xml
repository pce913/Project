<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smu.cs.fookey.SpecificActivity"
    android:background="@color/BackGround">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/capture"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/text_foodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="FOOD_NAME" />

                <TextView
                    android:id="@+id/text_foodCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="CATEGORY" />
                <TextView
                    android:id="@+id/text_foodCalorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="Calorie" />
                <TextView
                    android:id="@+id/text_foodSafety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="Nutrition Safety" />
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_nutrient"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    >
                </com.github.mikephil.charting.charts.PieChart>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#999999">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Event"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Intensity"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Weight"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Walking"
                            />
                        <TextView
                            android:id="@+id/text_walkingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#999999"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />

                        <Spinner
                            android:id="@+id/spinner_walkingIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                        <Spinner
                            android:id="@+id/spinner_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Jump Rope"
                            />
                        <TextView
                            android:id="@+id/text_jumpRopeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#999999"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />

                        <Spinner
                            android:id="@+id/spinner_jumpRopeIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Bike"
                            />
                        <TextView
                            android:id="@+id/text_bikeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#999999"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />

                        <Spinner
                            android:id="@+id/spinner_bikeIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Fitness"
                            />
                        <TextView
                            android:id="@+id/text_fitnessTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#999999"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />
                        <Spinner
                            android:id="@+id/spinner_fitnessIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Swimming"
                            />
                        <TextView
                            android:id="@+id/text_swimmingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#999999"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Time"
                            />

                        <Spinner
                            android:id="@+id/spinner_swimmingIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#666666"
                            android:gravity="center"
                            android:padding="3dp"
                            android:spinnerMode="dropdown"
                            />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
